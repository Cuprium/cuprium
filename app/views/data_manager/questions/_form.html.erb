<div class="span6">
  <%= form_for [:data_manager,@loan_product,@question], html: {class: 'form-horizontal'} do |form| %>
    <%= form.hidden_field :loan_product_id %> 
    <fieldset>
      <div class="control-group">
       <%= form.label :page, class: 'control-label' %> 
        <div class="controls">
          <%= form.select :page, (1..10), {}, { class: 'input-small' } %>
        </div>
      </div>
      <div class="control-group">
       <%= form.label :display_order, class: 'control-label' %> 
        <div class="controls">
          <%= form.select :display_order, (1..10), {}, { class: 'input-small' } %>
        </div>
      </div>
      <div class="control-group">
       <%= form.label :kind, class: 'control-label' %> 
        <div class="controls">
          <%= form.select :kind, Question::KindList, {}, { class: 'input-small' } %>
        </div>
      </div>
      <div class="control-group">
       <%= form.label :text, class: 'control-label' %> 
       <div class="controls">
         <%= form.text_area :text, { class: 'input-xlarge' } %> 
       </div>
      </div>
      <div class="control-group">
        <div class="controls"><%= form.submit( disable_with: t(:processing) )%> </div>
      </div>
    </fieldset>
  <% end %>
</div>
<%= content_for :errors do %>
  <%= render "shared/form_errors", :object => @loan_product %>
<% end %>

