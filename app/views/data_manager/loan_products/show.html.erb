<div class="span6">
  <h1><%= link_to @loan_product.name, [:edit,:data_manager,@loan_product] %></h1>
  <table class="table table-striped">
    <tr>
      <th><%= Question.human_attribute_name(:page) %></th>
      <th><%= Question.human_attribute_name(:display_order) %></th>
      <th><%= Question.human_attribute_name(:text) %></th>
    </tr>
    <% for question in @loan_product.questions do %>
      <tr>
        <td><%= link_to question.page,          [:edit,:data_manager,@loan_product,question] %></td>
        <td><%= link_to question.display_order, [:edit,:data_manager,@loan_product,question] %></td>
        <td><%= link_to question.text,          [:edit,:data_manager,@loan_product,question] %></td>
      </tr>
    <% end %>

  </table>

</div>
<div class="span6">
  <p><%= link_to t(:create_question,scope:[:data_manager,:loan_product]), [:new,:data_manager,@loan_product,:question]  %>
</div>
