<div class="span6">
  <p>
    <%= "#{@payment.direction.capitalize} : #{@account.owner} : #{@account.number} : #{@account.type}"  %>  
  </p>
  <%= form_for @payment, url: data_manager_payments_path(@payment), html: {class: 'form-horizontal'} do |form| %>
    <%= form.hidden_field :direction %> 
    <%= form.hidden_field :account, { class: 'input-xlarge' }  %> 
    <fieldset>
      <div class="control-group">
       <%= form.label :amount, class: 'control-label' %> 
       <div class="controls">
         <%= form.text_field :amount, { class: 'input-xlarge' } %> 
       </div>
      </div>
      <div class="control-group">
        <div class="controls"><%= form.button "Create #{@payment.direction.capitalize}", disable_with: "Processing ..." %> </div>
      </div>
    </fieldset>
  <% end %>
</div>